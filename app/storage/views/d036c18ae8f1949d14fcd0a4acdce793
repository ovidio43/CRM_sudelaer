<li class="nav-header">
    <a data-target="#<?php echo $mod; ?>" data-toggle="collapse" href="#">
        <h5>
            <b><?php echo strtoupper($mod); ?> </b>
            <i class="glyphicon <?php echo (Request::is($mod. '/*')) ? 'glyphicon-chevron-down' : 'glyphicon-chevron-right'; ?>"></i>
        </h5>
    </a>
    <ul id="<?php echo $mod; ?>" class="list-unstyled collapse <?php echo (Request::is($mod. '/*')) ? 'in' : ''; ?>">                               
        <?php
        if (Session::has('insert')) {
            ?>       
            <li <?php echo (Request::is($mod . '/' . Session::get('insert'))) ? 'class="custom-active"' : ''; ?>>            
                <a href="<?php echo URL::to($mod.'/'.Session::get('insert')); ?>"><i class="glyphicon glyphicon-plus"></i> <?php echo ucwords(Session::get('insert')); ?></a>
            </li>                
            <?php
        }
        if (Session::has('list')) {
            ?>       
            <li <?php echo (Request::is($mod . '/' . Session::get('list'))) ? 'class="custom-active"' : ''; ?>>            
                <a href="<?php echo URL::to($mod.'/'.Session::get('list')); ?>"><i class="glyphicon glyphicon-list-alt"></i> <?php echo ucwords(Session::get('list')); ?></a>
            </li>                
            <?php
        }
        ?>
    </ul>
</li> 
